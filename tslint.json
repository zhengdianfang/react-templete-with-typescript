{
    "extends": [
        "tslint:latest",
        "tslint-react"
    ],
    "rules": {
        "curly": false,
        "jsx-no-lambda": false,
        "object-literal-sort-keys": false,
        "ordered-imports": [
            true,
            {
                "import-sources-order": "lowercase-last",
                "named-imports-order": "lowercase-first"
            }
        ],
        "no-console": [
            true,
            "dir",
            "error",
            "warn"
        ],
        "interface-name": [
            true,
            "always-prefix"
        ],
        "no-empty-interface": false,
        "member-access": false,
        "jsx-boolean-value": false,
        "jsx-no-multiline-js": false,
        "no-implicit-dependencies": false,
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "only-arrow-functions": [
            false,
            "allow-declarations",
            "allow-named-functions"
        ],
        "no-empty": [
            false,
            "allow-empty-catch"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ]
    },
    "jsRules": {
        "no-console": [
            true,
            "dir",
            "error",
            "warn"
        ],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always",
            "ignore-interfaces"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}